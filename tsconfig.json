{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "rootDir": "src",
    "outDir": "build",
    "inlineSourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.js"]
}
